<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MySubjects">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sub_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CED7E6"
        android:elevation="0dp"
        android:gravity="right"
        android:transitionName="set_trans">

        <Toolbar
            android:id="@+id/settings_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@drawable/subjects_name" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/subjects_no_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ubuntu"
        android:text="No Contents yet"
        android:textAlignment="center"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
        android:id="@+id/subjects_back"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Go Back"
        android:background="#989898"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/subjects_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#989898"
            android:fontFamily="@font/ubuntu"
            android:text="Add new subject"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>